<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learn.gateway.dao.TOrderDao">

    <resultMap type="com.learn.gateway.entity.TOrder" id="TOrderMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="money" column="money" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TOrderMap">
        select
          id, user_id, money
        from db_order.t_order
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TOrderMap">
        select
          id, user_id, money
        from db_order.t_order
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TOrderMap">
        select
          id, user_id, money
        from db_order.t_order
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="money != null">
                and money = #{money}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into db_order.t_order(user_id, money)
        values (#{userId}, #{money})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_order.t_order
        <set>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="money != null">
                money = #{money},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_order.t_order where id = #{id}
    </delete>

</mapper>